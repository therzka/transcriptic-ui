<script id="instruction-template" type="text/x-handlebars-template">
  <div class="instruction panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{index}}">
          {{instructionString}}
        </a>
      </h4>
    </div>
    <div id="collapse{{index}}" class="panel-collapse collapse">
      <div class="panel-body">
        <div class="instruction_widget">
        </div>
      </div>
    </div>
  </div>
</script>

<script class="inst_template" id="distribute-form-template" type="text/x-handlebars-template">
  <span class="instruction_description">Aspirates sufficient volume from the source well, then dispenses into each target well the volume requested, in the order specified.</span>
  <div class="row">
      Volume: <%= text_field_tag :volume, "", class: "volume" %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Source</h4>
      <div data-ctype="from" class="from container_holder">Drop container here</div>
      <div class="from plate"></div>
    </div>
    <div class="col-md-6">
      <h4>Destination</h4>
      <div data-ctype="to" class="to container_holder">Drop container here</div>
      <div class="to plate"></div>
    </div>
  </div>
</script>

<script class="inst_template" id="transfer-form-template" type="text/x-handlebars-template">
  <span class="instruction_description">For each element in the transfer list, in order, aspirates the specifed volume from the source well and dispenses the same volume into the target well</span>
  <div class="row">
    <div class="col-md-6">
      <h4>Source</h4>
      <div data-ctype="from" class="from container_holder">Drop container here</div>
      <div class="from_plate"></div>
    </div>
    <div class="col-md-6">
      <h4>Destination</h4>
      <div data-ctype="to" class="to container_holder">Drop container here</div>
      <div class="to_plate"></div>
    </div>
  </div>
  <div class="row transfer_instruction">
      <div class="col-md-4">Volume<br>
       <%= text_field_tag :volume, "", class: "volume" %> <a href="#" class="copy-volume">copy ↓</a>
      </div>
      <div class="col-md-4">From<br>
      <%= text_field_tag :well, "", class:"from_well" %> <a href="#" class="copy-from">copy ↓</a>
      </div>
      <div class="col-md-4">To<br>
      <%= text_field_tag :well, "", class:"to_well" %>
      <button id="add_transfer">+</button>
      </div>
  </div>
</script>

